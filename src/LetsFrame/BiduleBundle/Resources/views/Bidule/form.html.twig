      <div class="controls">
      {{ form_widget(form.text, { 'attr': {'class': 'editor'} } ) }}
      </div>
    </div>

    {{ form_rest(form) }}

    <div class="form-actions">
    <button type="submit" class="btn btn-primary">{% block button %}{% endblock %}</button>
